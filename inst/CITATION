citHeader("To cite package 'Rcpi' in publications use:")

if(!exists("meta") || is.null(meta)) meta <- packageDescription("Rcpi")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date)
vers <- paste("R package version", meta$Version)
     
citEntry(entry = "Manual",
title = "Rcpi: Analysis Compound-Protein Interactions with R",
author = personList(as.person("Xiao Nan"),
                    as.person("Dongsheng Cao"),
                    as.person("Qingsong Xu"),
              year = year,
              note = vers,

textVersion =
paste("Xiao Nan, Dongsheng Cao, Qingsong Xu (",
       year,
       "). Rcpi: Analysis Compound-Protein Interactions with R. ",
       vers, ".", sep=""))

